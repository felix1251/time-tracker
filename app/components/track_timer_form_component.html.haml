- is_new = track.new_record?
= form_for track, url: (is_new ? tracks_path : stop_countdown_tracks_path(track)), html: { id: "track-timer", class: "w-full"} do |f|
  .flex.divide-x
    .field.pr-4.w-full
      = f.text_field :activity, placeholder: "What are you working on?", required: true
    .flex.w-fit.items-center
      .field.pl-4.w-60
        = f.select :tag_id, options_for_select(tags.map{|tag| [tag.name, tag.id]}),  { prompt: "-- Select Tag --" }, required: true
      .span.px-6.text-xl.font-medium.text-secondary
        00:00:00
      = f.submit is_new ? 'start' : "stop", class: "#{is_new ? 'btn-primary' : 'btn-countdown'} uppercase text-sm disabled:bg-gray-200 disabled:cursor-progress "
